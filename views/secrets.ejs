<%- include('partials/header') %>
<%- include('partials/nav') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered Some Secrets!</h1>

    <%userswithsecrets.forEach(function(user){%>
      <%for(var i=0;i<user.secret.length;i++){%>

        <div class="card text-center">
          <div class="card-body secret-card">
            <p class=""><%=user.secret[i]%></p>
          </div>
        </div>
      <%}%>
    <%});%>
    <hr>
    
    <a class="btn btn-dark btn-lg block-buttons" href="/submit" role="button">Submit a Secret</a>
    <a class="btn btn-light btn-lg block-buttons" href="/logout" role="button">Log Out</a>
  </div>
</div>

<%- include('partials/footer') %>
